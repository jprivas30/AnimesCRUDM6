</div>

{{!-- Modal Para Agregar Animes --}}

<div class="modal fade" id="crearAnimeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="tituloCrear">Agrega Un Nuevo Anime</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="crearAnime">
            <label for="crearNombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="nombre" id="crearNombre" required>
            <label for="crearGenero" class="form-label pt-2">Género</label>
            <input type="text"  class="form-control" name="genero" id="crearGenero" required>
            <label for="crearYear" class="form-label pt-2">Año</label>
            <input type="text"  class="form-control" name="year" id="crearYear" required>
            <label for="crearAutor" class="form-label pt-2">Autor</label>
            <input type="text"  class="form-control" name="autor" id="crearAutor" required>
            <label for="crearImagen" class="form-label pt-2">Imágen URL</label>
            <input type="text" class="form-control " name="imagen" id="crearImagen" required>
            <input type="submit" class="btn btn-primary mt-3" value="Agregar Anime">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


